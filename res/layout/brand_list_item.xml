<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:orientation="vertical" >
    

    
    <ImageView 
        android:id="@+id/iv_brand"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/default_pic"
        />
    
    <LinearLayout 
        android:id="@+id/ll_product_images"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:padding="2px"
            android:visibility="invisible"
            android:background="@color/color_lightgrey"
            android:id="@+id/brandlist_item_imageview1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/default_pic"
            />
        
        <ImageView
            android:padding="2px"
            android:visibility="invisible"
            android:background="@color/color_lightgrey"
            android:scaleType="centerCrop"
            android:id="@+id/brandlist_item_imageview2"
            android:layout_marginLeft="2px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/default_pic"
            />
        
        <ImageView
            android:padding="2px"
            android:visibility="invisible"
            android:background="@color/color_lightgrey"
            android:scaleType="centerCrop"
            android:id="@+id/brandlist_item_imageview3"
            android:layout_marginLeft="2px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/default_pic"
            />
        
        <ImageView
            android:padding="2px"
            android:visibility="invisible"
            android:background="@color/color_lightgrey"
            android:scaleType="centerCrop"
            android:id="@+id/brandlist_item_imageview4"
            android:layout_marginLeft="2px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/default_pic"
            />
    </LinearLayout>
    
</LinearLayout>
