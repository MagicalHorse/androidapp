<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me_bg"
            android:paddingBottom="10dip" >

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/setting" />

            <com.shenma.yueba.view.RoundImageView
                android:id="@+id/iv_icon"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dip"
                android:src="@drawable/default_pic" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:text="小猫猫"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:text="养家模式"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/shop_main_width5_dimen"
            android:layout_marginBottom="@dimen/shop_main_lineheight10_dimen"
            android:background="@color/white"
            android:gravity="center" >

            <!-- 圆形 -->

            <LinearLayout
                android:layout_width="@dimen/user_config_iconwidth60_dimen"
                android:layout_height="@dimen/user_config_iconwidth60_dimen"
                android:background="@drawable/round_background"
                android:gravity="center"
                android:orientation="vertical" >

                <!-- 关注 -->

                <TextView
                    android:id="@+id/shop_main_attentionvalue_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:hint="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/shop_main_attention_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:hint="@string/shop_attention_str" />
            </LinearLayout>

            <!-- 圆形 -->

            <LinearLayout
                android:layout_width="@dimen/user_config_iconwidth60_dimen"
                android:layout_height="@dimen/user_config_iconwidth60_dimen"
                android:layout_marginLeft="@dimen/shop_main_lineheight10_dimen"
                android:background="@drawable/round_background"
                android:gravity="center"
                android:orientation="vertical" >

                <!-- 粉丝 -->

                <TextView
                    android:id="@+id/shop_main_fansvalue_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:hint="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/shop_main_fans_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:hint="@string/shop_fans_str" />
            </LinearLayout>

            <!-- 圆形 -->

            <LinearLayout
                android:layout_width="@dimen/user_config_iconwidth60_dimen"
                android:layout_height="@dimen/user_config_iconwidth60_dimen"
                android:layout_marginLeft="@dimen/shop_main_lineheight10_dimen"
                android:background="@drawable/round_background"
                android:gravity="center"
                android:orientation="vertical" >

                <!-- 赞 -->

                <TextView
                    android:id="@+id/shop_main_praisevalue_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:hint="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/shop_main_praise_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:hint="收藏" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_all_order"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/all_order"
                android:gravity="center_horizontal"
                android:text="全部"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_waiting_for_send"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/dfk"
                android:gravity="center_horizontal"
                android:text="代付款"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_waiting_for_recieve"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/zgzt"
                android:gravity="center_horizontal"
                android:text="专柜自提"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_pick_by_myself"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dip"
                android:drawableTop="@drawable/sh"
                android:gravity="center_horizontal"
                android:text="售后"
                android:textColor="@color/black"
                android:textSize="13dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_collection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_right"
            android:padding="15dip"
            android:text="我的收藏"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_will_yangjia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_right"
            android:padding="15dip"
            android:text="我要养家"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

</ScrollView>