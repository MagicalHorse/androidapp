<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me_bg"
            android:paddingBottom="10dip" >

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/setting" />

            <com.shenma.yueba.view.RoundImageView
                android:id="@+id/iv_icon"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dip"
                android:src="@drawable/defalt_pic" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:text="小猫猫"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:text="养家模式"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/gray_round_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_attention_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_color"
                    android:text="886" />

                <TextView
                    android:textColor="@color/text_gray_color"
                    android:id="@+id/tv_attention_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/gray_round_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                       android:textColor="@color/text_gray_color"
                    android:text="886" />

                <TextView
                    android:id="@+id/tv_fans_title"
                    android:layout_width="wrap_content"
                       android:textColor="@color/text_gray_color"
                    android:layout_height="wrap_content"
                    android:text="粉丝" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/gray_round_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_collection_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                       android:textColor="@color/text_gray_color"
                    android:text="886" />

                <TextView
                    android:id="@+id/tv_collection_title"
                    android:layout_width="wrap_content"
                       android:textColor="@color/text_gray_color"
                    android:layout_height="wrap_content"
                    android:text="收藏" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_all_order"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/all_order"
                android:gravity="center_horizontal"
                android:text="全部"
               android:drawablePadding="3dip"
                   android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_waiting_for_send"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                   android:textColor="@color/black"
                android:drawableTop="@drawable/dfk"
                android:gravity="center_horizontal"
                android:text="代付款"
                 android:drawablePadding="3dip"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_waiting_for_recieve"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                   android:textColor="@color/black"
                android:layout_weight="1"
                android:drawableTop="@drawable/zgzt"
                android:gravity="center_horizontal"
                 android:drawablePadding="3dip"
                android:text="专柜自提"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_pick_by_myself"
                android:layout_width="0dip"
                   android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/sh"
                android:gravity="center_horizontal"
                 android:drawablePadding="3dip"
                android:text="售后"
                android:textSize="13dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_collection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@color/white"
               android:textColor="@color/black"
            android:drawableRight="@drawable/arrow_right"
            android:padding="15dip"
            android:textSize="17sp"
            android:text="我的收藏" />

        <TextView
            android:id="@+id/tv_will_yangjia"
            android:layout_marginTop="1dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
             android:textSize="17sp"
                android:textColor="@color/black"
            android:drawableRight="@drawable/arrow_right"
            android:padding="15dip"
            android:text="我要养家" />
    </LinearLayout>

</ScrollView>