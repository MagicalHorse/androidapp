<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/shop_main_width3_dimen"
            android:orientation="horizontal" >

            <TextView
                android:gravity="center"
                android:id="@+id/shop_stay_layout_item_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="sss" />

            <TextView
                android:gravity="center"
                android:id="@+id/shop_stay_layout_item_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shop_main_width5_dimen"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>

        <View
            android:id="@+id/shop_stay_layout_item_line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_main_width2_dimen"
            android:layout_marginTop="@dimen/shop_main_lineheight8_dimen"
            android:background="@color/color_deeoyellow"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>