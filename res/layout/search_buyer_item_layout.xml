<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center"
    android:padding="@dimen/margin_left_and_right"
    >

    <!-- 头像 -->

    <com.shenma.yueba.view.RoundImageView
        android:id="@+id/search_buyer_item_imageview"
        android:layout_width="@dimen/user_config_iconwidth50_dimen"
        android:layout_height="@dimen/user_config_iconwidth50_dimen"
        android:src="@drawable/default_pic"/>

    <TextView
        android:layout_marginLeft="@dimen/shop_main_width5_dimen"
        android:gravity="center_vertical"
        android:id="@+id/search_buyer_item_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/textsize15sp"
        android:hint="姓名"
        />
</LinearLayout>