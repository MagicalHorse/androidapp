<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.73"
        android:paddingBottom="8dip"
        android:paddingTop="8dip" >

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/iv_product"
            android:text="NIKE"
            android:textColor="@color/text_gray_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_product_name"
            android:layout_toRightOf="@id/tv_product_name"
            android:gravity="right"
            android:text="05-06上架"
            android:textColor="@color/text_gray_color" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_product_name"
            android:layout_below="@id/tv_product_name"
            android:layout_marginRight="20dip"
            android:layout_toRightOf="@id/iv_product"
            android:ellipsize="end"
            android:lineSpacingExtra="1dip"
            android:maxLines="2"
            android:text=",这是一双好鞋，穿起来舒服这是一双好鞋，穿起来舒服这是一双好鞋，穿起来舒服"
            android:textColor="@color/text_gray_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_product_name"
            android:layout_below="@id/tv_description"
            android:text="货号：34size"
            android:textColor="@color/text_gray_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_size"
            android:layout_toRightOf="@id/tv_size"
            android:gravity="right"
            android:text="￥567.00"
            android:textSize="10sp" />
    </RelativeLayout>

    <View style="@style/style_horizontal_line" />

    <LinearLayout
        android:id="@+id/ll_online"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_down"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="下架" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_online_copy"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="复制" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_online_share"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="分享" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="修改" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_offline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="上架" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_copy_willbeoffline"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="复制" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_offline_share"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="分享" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="删除" />
    </LinearLayout>

</LinearLayout>