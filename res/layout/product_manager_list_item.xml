<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:background="@color/white"
    android:paddingRight="10dip"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.73"
        android:paddingBottom="8dip"
        android:paddingTop="8dip" >

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />
<TextView
            android:layout_marginLeft="10dip"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_date"
            android:layout_alignTop="@id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@null"
            android:textSize="13sp"
            android:textColor="@color/text_gray_color" />
        <TextView
            android:layout_marginTop="3dip"
            android:id="@+id/tv_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginLeft="5dip"
            android:layout_toLeftOf="@id/tv_date"
            android:layout_toRightOf="@id/iv_product"
            android:text="@null"
            android:ellipsize="end"
            android:textColor="@color/text_gray_color"
             android:textSize="15sp" />

        

        <TextView
            android:id="@+id/tv_description"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_toRightOf="@id/iv_product"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@null"
            android:textColor="@color/text_gray_color"
            android:textSize="13sp" />

        <TextView
            android:layout_alignBottom="@id/iv_product"
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="5dip"
               android:layout_toRightOf="@id/iv_product"
            android:textColor="@color/text_gray_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_size"
            android:layout_toRightOf="@id/tv_size"
            android:gravity="right"
            android:text="@null"
            android:textColor="@color/red_text_color"
            android:textSize="15sp" />
        
        
        
    </RelativeLayout>

    <View style="@style/style_horizontal_line" />

    <LinearLayout
        android:id="@+id/ll_online"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_button1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dip"
            android:text="@null" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_button2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dip"
            android:text="@null" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_button3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dip"
            android:text="@null" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_button4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dip"
            android:text="@null" />
    </LinearLayout>
 <View style="@style/style_horizontal_line" />

</LinearLayout>