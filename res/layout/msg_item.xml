<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="@dimen/shop_main_iconwidth80_dimen"
        android:layout_height="@dimen/shop_main_iconwidth80_dimen" >

        <com.shenma.yueba.view.RoundImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_msg"
            android:layout_width="@dimen/user_config_iconwidth60_dimen"
            android:layout_height="@dimen/user_config_iconwidth60_dimen"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />
        
       <TextView
            android:layout_marginRight="8dp"
            android:textSize="@dimen/textsize11sp"
            android:id="@+id/tv_msg_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/redround_background"
            android:gravity="center"
            android:text="@null"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingBottom="3dip"
        android:paddingLeft="10dip"
        android:paddingTop="3dip" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/shop_main_width120_dimen"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dip"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="@null"
            android:textSize="@dimen/textsize10sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_toLeftOf="@+id/tv_time"
            android:text="@null"
            android:textSize="@dimen/textsize14sp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@null"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/textsize11sp" />
    </RelativeLayout>

</LinearLayout>