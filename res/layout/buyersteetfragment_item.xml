<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zzy="http://schemas.android.com/apk/res/com.shenma.yueba"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/shop_main_lineheight10_dimen"
    android:paddingTop="@dimen/shop_main_lineheight10_dimen" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/shop_main_width5_dimen"
        android:paddingTop="@dimen/shop_main_width5_dimen"
        android:visibility="visible" >

        <com.shenma.yueba.view.RoundImageView
            android:id="@+id/baijia_tab1_item_icon_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/shop_main_lineheight8_dimen"
            android:layout_toRightOf="@id/baijia_tab1_item_icon_imageview"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/baijia_tab1_item_productname_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:padding="0dp"
                android:textSize="@dimen/textsize14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/baijia_tab1_item_productaddress_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/address" />

                <TextView
                    android:id="@+id/baijia_tab1_item_productaddress_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/shop_main_width2_dimen"
                    android:layout_toLeftOf="@+id/baijia_tab1_item_time_textview"
                    android:layout_toRightOf="@id/baijia_tab1_item_productaddress_imageview"
                    android:gravity="top|left"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/textsize12sp" />

                <TextView
                    android:id="@+id/baijia_tab1_item_time_textview"
                    android:layout_width="@dimen/user_config_iconwidth75_dimen"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/shop_main_width15_dimen"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="5分钟"
                    android:textSize="@dimen/textsize12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/baijia_tab1_item_productcontent_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/buyersteetfragmeng_item_desc_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:textSize="@dimen/textsize14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/shop_main_lineheight10_dimen" >

        <TextView
            android:id="@+id/buyersteetfragmeng_item_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize14sp" />

        <TextView
            android:id="@+id/buyersteetfragmeng_item_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_background"
            android:drawableLeft="@drawable/share"
            android:gravity="center"
            android:paddingBottom="@dimen/shop_main_width3_dimen"
            android:paddingLeft="@dimen/shop_main_lineheight10_dimen"
            android:paddingRight="@dimen/shop_main_lineheight10_dimen"
            android:paddingTop="@dimen/shop_main_width3_dimen"
            android:text="分享"
            android:textSize="@dimen/textsize13sp" />

        <TextView
            android:id="@+id/buyersteetfragmeng_item_siliao_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shop_main_width5_dimen"
            android:layout_toLeftOf="@id/buyersteetfragmeng_item_share_button"
            android:background="@drawable/gray_background"
            android:drawableLeft="@drawable/baijia_circle_cion"
            android:gravity="center"
            android:paddingBottom="@dimen/shop_main_width3_dimen"
            android:paddingLeft="@dimen/shop_main_lineheight10_dimen"
            android:paddingRight="@dimen/shop_main_lineheight10_dimen"
            android:paddingTop="@dimen/shop_main_width3_dimen"
            android:text="私聊"
            android:textSize="@dimen/textsize13sp" />
    </RelativeLayout>

   <!--  <include
        android:id="@+id/approvebuyerdetails_attention_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/attentionpeople_layout"
        android:visibility="gone" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:drawablePadding="0dip"
            android:layout_height="@dimen/user_config_iconwidth60_dimen"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/like_backgroud"
             />

        <LinearLayout
            android:id="@+id/ll_attentionpeople_contener"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buyersteetfragment_item_footer_linearlyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/shop_main_width3_dimen"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/shop_main_width3_dimen"
        android:background="@drawable/youhui"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/shop_main_width3_dimen"
        android:paddingTop="@dimen/shop_main_lineheight8_dimen" >

        <TextView
            android:id="@+id/buyersteetfragment_item_footer_linearlyout_content_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize11sp" />
    </LinearLayout>

</LinearLayout>