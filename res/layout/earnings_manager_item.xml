<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dip" >

    <ImageView
        android:id="@+id/iv_earnings_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/earning_icon" />

    <TextView
        android:id="@+id/tv_earnings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/iv_earnings_left"
        android:text="收益管理"
        android:textColor="@color/text_gray_color"
        android:textSize="@dimen/index_big_size_font" />

    <LinearLayout
        android:layout_marginLeft="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@id/tv_earnings_title"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_today_earnings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收益"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/index_little_size_font" />

            <TextView
                android:id="@+id/tv_today_earnings_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="500"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/index_little_size_font" />

            <TextView
                android:id="@+id/tv_today_earnings_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="元"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/index_little_size_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_all_earnings_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收益"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/index_little_size_font" />

                <TextView
                    android:id="@+id/tv_all_earnings_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="52100"
                    android:textColor="@color/red_text_color"
                    android:textSize="@dimen/index_little_size_font" />

                <TextView
                    android:id="@+id/tv_all_earnings_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="元"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/index_little_size_font" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/arrow_right" />

</RelativeLayout>