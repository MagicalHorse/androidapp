<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- 头像 -->

    <com.shenma.yueba.view.RoundImageView
        android:id="@+id/shop_main_layout_icon_imageview"
        android:layout_width="@dimen/shop_main_iconwidth80_dimen"
        android:layout_height="@dimen/shop_main_iconwidth80_dimen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:src="@drawable/default_pic" />
    <!-- 店名 -->

    <TextView
        android:id="@+id/shop_main_layout_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:gravity="center"
        android:text="买手"
        android:textSize="@dimen/textsize18sp" />

    <!-- 商场 -->

    <TextView
        android:id="@+id/shop_main_layout_market_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:gravity="center"
        android:text="门店"
        android:textColor="@color/color_textgray"
        android:textSize="@dimen/textsize13sp" />

    <!-- 按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width20_dimen"
        android:gravity="center" >

        <TextView
            android:id="@+id/shop_main_siliao_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skyblue_background"
            android:drawableLeft="@drawable/shop_siliao"
            android:drawablePadding="@dimen/shop_main_width5_dimen"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:text="私聊"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/shop_main_attention_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shop_main_marginleft30_dimen"
            android:background="@drawable/yellow_background"
            android:drawableLeft="@drawable/shop_guanzhu"
            android:drawablePadding="@dimen/shop_main_width5_dimen"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:text="关注"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width15_dimen"
        android:gravity="center" >

        <!-- 圆形 -->

        <LinearLayout
            android:layout_width="@dimen/user_config_iconwidth70_dimen"
            android:layout_height="@dimen/user_config_iconwidth70_dimen"
            android:background="@drawable/round_background"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 关注 -->

            <TextView
                android:id="@+id/shop_main_attentionvalue_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:hint="0"
                android:textColor="@color/color_textgray"
                android:singleLine="true" />

            <TextView
                android:id="@+id/shop_main_attention_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shop_main_width3_dimen"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@color/color_textgray"
                android:hint="@string/shop_attention_str"
                android:textSize="@dimen/textsize12sp" />
        </LinearLayout>

        <!-- 圆形 -->

        <LinearLayout
            android:layout_width="@dimen/user_config_iconwidth70_dimen"
            android:layout_height="@dimen/user_config_iconwidth70_dimen"
            android:layout_marginLeft="@dimen/shop_main_lineheight10_dimen"
            android:background="@drawable/round_background"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 粉丝 -->

            <TextView
                android:id="@+id/shop_main_fansvalue_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/color_textgray"
                android:hint="0"
                android:singleLine="true" />

            <TextView
                android:id="@+id/shop_main_fans_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shop_main_width3_dimen"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@color/color_textgray"
                android:hint="@string/shop_fans_str"
                android:textSize="@dimen/textsize12sp" />
        </LinearLayout>

        <!-- 圆形 -->

        <LinearLayout
            android:id="@+id/shop_main_circle_layout"
            android:layout_width="@dimen/user_config_iconwidth70_dimen"
            android:layout_height="@dimen/user_config_iconwidth70_dimen"
            android:layout_marginLeft="@dimen/shop_main_lineheight10_dimen"
            android:background="@drawable/round_background"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 赞 -->

            <TextView
                android:id="@+id/shop_main_praisevalue_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/color_textgray"
                android:hint="0"
                android:singleLine="true" />

            <TextView
                android:id="@+id/shop_main_praise_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shop_main_width3_dimen"
                android:layout_weight="1"
                android:textColor="@color/color_textgray"
                android:gravity="top"
                android:hint="@string/shop_circle_str"
                android:textSize="@dimen/textsize12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/shap_main_description1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width15_dimen"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right"
        android:textColor="@color/color_textgray"
        android:text=""
        android:textSize="@dimen/textsize13sp" />

    <TextView
        android:id="@+id/shap_main_description2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:hint="@string/shop_description2_str"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/shap_main_description3_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_lineheight10_dimen"
        android:hint="@string/shop_description3_str"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right"
        android:visibility="gone" />

    <View
        style="@style/style_horizontal_line"
        android:layout_marginTop="@dimen/shop_main_width20_dimen" />
    <!-- tab -->

    <LinearLayout
        android:id="@+id/shop_main_head_layout_tab_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:orientation="horizontal" />

</LinearLayout>