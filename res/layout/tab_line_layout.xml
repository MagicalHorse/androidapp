<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tab_line_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_gray_color"
        android:textSize="@dimen/title_text_size" />

    <View
        android:id="@+id/tab_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_main_width3_dimen"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/shop_main_lineheight10_dimen"
        android:layout_marginRight="@dimen/shop_main_lineheight10_dimen"
        android:background="@color/color_deeoyellow" />

</RelativeLayout>