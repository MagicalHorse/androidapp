<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/affirmorder_item_icon_imageview"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginRight="@dimen/shop_main_lineheight10_dimen"
        android:src="@drawable/default_pic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:paddingTop="8dip" 
        android:paddingBottom="8dip"
        >

        <TextView
            android:id="@+id/affirmorder_item_productname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@null"
            android:textSize="@dimen/textsize13sp" />

        <TextView
            android:id="@+id/affirmorder_item_productsize_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@null"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/textsize13sp" />

        <TextView
            android:id="@+id/affirmorder_item_productprice_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@null"
            android:textColor="@color/red_text_color"
            android:textSize="@dimen/textsize13sp" />

        <TextView
            android:id="@+id/affirmorder_item_productcount_textview"
            android:layout_alignTop="@id/affirmorder_item_productcount_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/affirmorder_item_productsize_textview"
            android:layout_toRightOf="@id/affirmorder_item_productprice_textview"
            android:ellipsize="end"
            android:layout_marginLeft="10dip"
            android:gravity="right"
            android:singleLine="true"
            android:text="@null"
            android:textSize="@dimen/textsize14sp" />
    </RelativeLayout>

</LinearLayout>