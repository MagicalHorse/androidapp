<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_left_and_right"
    android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/shop_main_width5_dimen"
        android:paddingTop="@dimen/shop_main_width5_dimen" >

        <TextView
            android:id="@+id/baijia_orderlayout_item_nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize14sp"
            android:text="" />

        <TextView
            android:id="@+id/baijia_orderlayout_item_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize14sp"
            android:text=""
            android:textColor="@color/red" />
    </RelativeLayout>

    <View style="@style/style_horizontal_line" />

    <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        layout="@layout/productinfolist_layout" />

    <View style="@style/style_horizontal_line" />

    <RelativeLayout
           android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/shop_main_lineheight8_dimen"
        android:paddingTop="@dimen/shop_main_lineheight8_dimen" >

        <TextView
            android:id="@+id/orderlist_item_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize14sp"
            android:text="" />

        <TextView
            android:id="@+id/baijia_orderlayout_item_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/baijia_orderlayout_item_pricevalue_textview"
            android:textSize="@dimen/textsize14sp"
            android:text="@null" />

        <TextView
            android:textColor="@color/red"
            android:id="@+id/baijia_orderlayout_item_pricevalue_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize14sp"
            android:text="@null" />
    </RelativeLayout>

    <View style="@style/style_horizontal_line" />

    <RelativeLayout
           android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:id="@+id/baijia_orderdetails_layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/shop_main_marginleft30_dimen"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/shop_main_lineheight8_dimen"
        android:paddingTop="@dimen/shop_main_lineheight8_dimen" >

        <TextView
            android:id="@+id/baijia_orderdetails_lianxibuyer_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/baijiaorder_layout_item_status"
            android:gravity="left|center_vertical"
            android:text=""
            android:textSize="@dimen/textsize13sp" />

        <LinearLayout
            android:id="@+id/baijiaorder_layout_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" />
    </RelativeLayout>

</LinearLayout>