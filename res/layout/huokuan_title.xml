<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_title_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_can_withdraw"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="可提现"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:id="@+id/iv_cursor_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/corsur_margin"
                android:layout_marginRight="@dimen/corsur_margin"
                android:background="@drawable/line_title"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_freeze"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="冻结中"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:id="@+id/iv_cursor_left2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/corsur_margin"
                android:layout_marginRight="@dimen/corsur_margin"
                android:background="@drawable/line_title"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_had_withdraw"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已提现"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:id="@+id/iv_cursor_right2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/corsur_margin"
                android:layout_marginRight="@dimen/corsur_margin"
                android:background="@drawable/line_title"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="退款"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:id="@+id/iv_cursor_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/corsur_margin"
                android:layout_marginRight="@dimen/corsur_margin"
                android:background="@drawable/line_title"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
