<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/ll_top"
        layout="@layout/top_layout" />

   

    <LinearLayout
            android:layout_marginTop="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <EditText
        
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/transparent"
            android:hint="创建用户名"
            android:paddingLeft="@dimen/margin_left_and_right" />

        <View
            style="@style/style_horizontal_line"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_marginRight="@dimen/margin_left_and_right" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/white"
            android:hint="设置密码"
            android:paddingLeft="@dimen/margin_left_and_right" />

        <View
            style="@style/style_horizontal_line"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_marginRight="@dimen/margin_left_and_right" />

        <EditText
            android:id="@+id/et_repassword"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/white"
            android:hint="再次输入密码"
            android:paddingLeft="@dimen/margin_left_and_right" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right" >

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="55dip"
            android:gravity="center_vertical"
            android:text="北京"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_change_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/arrow_right"
            android:text="切换城市"
            android:drawablePadding="5dip"
            android:textSize="17sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/shape_main_color_button"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>