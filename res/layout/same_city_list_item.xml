<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.shenma.yueba.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/user_config_iconwidth60_dimen"
            android:layout_height="@dimen/user_config_iconwidth60_dimen"
            android:layout_centerVertical="true"
            android:src="@drawable/default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toLeftOf="@+id/tv_attention"
            android:layout_toRightOf="@+id/iv_head"
            android:gravity="left|center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小猫猫"
                android:textSize="@dimen/textsize14sp" />

            <TextView
                android:id="@+id/tv_belong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_main_width2_dimen"
                android:text="王府井百货--GIVN"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/textsize12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="@dimen/user_config_iconwidth75_dimen"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_yellow_bg"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="5dip"
            android:text="取消关注"
            android:textSize="@dimen/textsize13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_images"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_main_width120_dimen"
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/brandlist_item_imageview1_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_lightgrey"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/brandlist_item_imageview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pic"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brandlist_item_imageview2_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/color_lightgrey"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_margin="1dp"
                android:id="@+id/brandlist_item_imageview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_lightgrey"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pic"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brandlist_item_imageview3_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/color_lightgrey"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_margin="1dp"
                android:id="@+id/brandlist_item_imageview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pic"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>