<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.shenma.yueba.view.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/iv_head"
            android:text="小猫猫"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_alignLeft="@+id/tv_nick_name"
            android:layout_toRightOf="@+id/iv_head"
            android:text="王府井百货--GIVN"
            android:textColor="@color/text_gray_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_yellow_bg"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="关注" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_images"
        >
         <ImageView
            android:id="@+id/brandlist_item_imageview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"
            />
          <ImageView
            android:layout_marginLeft="@dimen/shop_main_width2_dimen"
            android:id="@+id/brandlist_item_imageview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"
            />
           <ImageView
            android:layout_marginLeft="@dimen/shop_main_width2_dimen"
            android:id="@+id/brandlist_item_imageview3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"
            />
        
    </LinearLayout>
</LinearLayout>