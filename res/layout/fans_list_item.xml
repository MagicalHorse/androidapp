<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:orientation="horizontal"
    android:padding="10dip" >

    <com.shenma.yueba.view.RoundImageView
        android:id="@+id/riv_head"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:src="@drawable/default_pic" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_button_stroke"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="2dip"
            android:text="买手"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_type"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/tv_type"
            android:text="加菲猫" />

        <LinearLayout
            android:id="@+id/ll_attention"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_attention_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="关注 46"
                android:textColor="@color/text_gray_color" />

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_attention_count"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="粉丝 46"
                android:textColor="@color/text_gray_color" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="5dip"
            android:gravity="bottom"
            android:text="北京市海淀区中关村"
            android:id="@+id/tv_address"
            android:textColor="@color/text_gray_color"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/tv_atttention"
        android:layout_width="50dip"
        android:layout_height="25dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_linearlayout10"
        android:text="关注" />

</LinearLayout>