<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="70dip"
     >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        >
        <com.shenma.yueba.view.RoundImageView
        android:id="@+id/riv_head"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:src="@drawable/default_pic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gray_button_stroke"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="2dip"
                android:text="买手"
                android:textSize="@dimen/textsize12sp"
                android:visibility="gone" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textSize="@dimen/textsize12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_attention_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textsize12sp" />

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@null"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textsize12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tv_atttention"
        android:layout_width="80dip"
        android:layout_height="30dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_linearlayout10"
        android:text="关注"
        android:textSize="@dimen/textsize13sp" />
        
    </LinearLayout>
    <View 
        android:layout_alignParentBottom="true"
        style="@style/style_horizontal_line"/>

</RelativeLayout>