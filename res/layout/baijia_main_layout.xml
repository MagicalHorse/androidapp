<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/baijia_main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/baijia_main_foot_linearlayout" />

    <LinearLayout
        android:padding="@dimen/shop_main_width5_dimen"
        android:id="@+id/baijia_main_foot_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@color/color_lightgrey"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
       
    </LinearLayout>

</RelativeLayout>