<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/ll_top"
        layout="@layout/top_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

             <TextView 
                 android:id="@+id/tv_old_password_title"
                 android:layout_width="wrap_content"
                 android:layout_height="55dip"
                 android:gravity="center"
                 android:text="旧密码"
                 android:textSize="17sp"
                 />
            <EditText
                android:layout_toRightOf="@+id/tv_confirm_passwrod"
                android:layout_marginLeft="@dimen/shop_main_width5_dimen"
                android:id="@+id/et_old_password"
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:background="@color/transparent"
                android:singleLine="true"
                android:password="true"
                android:hint="请输入旧密码"
                android:textSize="17sp" />
            
            
            
            <View
            android:id="@+id/newpwd_view8"
            android:layout_below="@id/et_old_password"
            style="@style/style_horizontal_line"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip" />
            
            <TextView 
                 android:layout_below="@id/newpwd_view8"
                 android:id="@+id/tv_new_password_title"
                 android:layout_width="wrap_content"
                 android:layout_height="55dip"
                 android:gravity="center"
                 android:text="新密码"
                 android:textSize="17sp"
                 />
            
            <EditText
                android:layout_marginLeft="@dimen/shop_main_width5_dimen"
                android:layout_toRightOf="@+id/tv_confirm_passwrod"
                android:layout_below="@id/tv_old_password_title"
                android:id="@+id/et_new_password"
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:background="@color/transparent"
                android:singleLine="true"
                android:password="true"
                android:hint="请输入新密码"
                android:textSize="17sp" />
            
            <View
            android:id="@+id/newpwd_view2"
            android:layout_below="@id/tv_new_password_title"
            style="@style/style_horizontal_line"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip" />
            
            
            <TextView 
                 android:layout_below="@id/newpwd_view2"
                 android:id="@+id/tv_confirm_passwrod"
                 android:layout_width="wrap_content"
                 android:layout_height="55dip"
                 android:gravity="center"
                 android:text="确认密码"
                 android:textSize="17sp"
                 />
            
            <EditText
                android:layout_marginLeft="@dimen/shop_main_width5_dimen"
                android:layout_below="@id/newpwd_view2"
                android:layout_toRightOf="@+id/tv_confirm_passwrod"
                android:id="@+id/et_new_repassword"
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:background="@color/transparent"
                android:singleLine="true"
                android:password="true"
                android:hint="请输入确认密码"
                android:textSize="17sp" />
            
            
        </RelativeLayout>
        
         
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/bt_sure"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/shape_main_color_button"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>