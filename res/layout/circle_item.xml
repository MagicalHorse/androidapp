<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
         android:layout_width="150dip"
            android:layout_height="150dip">

        <com.shenma.yueba.view.RoundImageView
            android:id="@+id/riv"
            android:layout_centerInParent="true"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:src="@drawable/default_pic" />

        <View
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_centerInParent="true" 
            android:background="@drawable/circle_shape" />
       <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/guangyun" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:id="@+id/tv_circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="2"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textsize15sp" />

    <TextView
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text=""
        android:textSize="@dimen/textsize13sp" />

    <TextView
        android:layout_marginTop="@dimen/shop_main_width5_dimen"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/address"
        android:gravity="bottom"
        android:text=""
        android:ellipsize="end"
        android:textColor="#999999"
        android:textSize="@dimen/textsize12sp" />

</LinearLayout>