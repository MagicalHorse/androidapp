<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_left_and_right"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/affirmorder_item_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:gravity="right"
            android:id="@+id/affirmorder_item_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name" />
    </LinearLayout>

    <include layout="@layout/productinfolist_layout"/>
    
    <TextView
        android:layout_marginTop="@dimen/shop_main_width3_dimen"
        style="@style/style_horizontal_line"
        />

</LinearLayout>