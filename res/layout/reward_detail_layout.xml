<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >


    <include layout="@layout/title_for_common" />

    <View
        style="@style/style_horizontal_line"
        android:layout_marginTop="10dip" />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/pulltorefreshscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_reward_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:gravity="center_vertical"
                    android:text="奖励说明"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    style="@style/style_horizontal_line"
                    android:layout_marginTop="5dip" />

                <TextView
                    android:id="@+id/tv_reward_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="我是奖励说明我是奖励说明我是奖励说明我是奖励说明我是奖励说明我是奖励说明我是奖励说明"
                    android:textColor="@color/text_gray_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_progress_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:gravity="center_vertical"
                    android:text="当前进度"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    style="@style/style_horizontal_line"
                    android:layout_marginTop="5dip" />

                <TextView
                    android:id="@+id/tv_progress_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="我是当前进度我是当前进度我是当前进度我是当前进度我是当前进度我是当前进度"
                    android:textColor="@color/text_gray_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                
                  android:layout_marginTop="15dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_history_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:gravity="center_vertical"
                    android:text="历史进度"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View 
                     android:layout_marginTop="10dip"
                    style="@style/style_horizontal_line"
                    />
                
                <ListView
                    android:id="@+id/lv"
                    android:layout_marginTop="10dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:divider="#33333333"
                    android:dividerHeight="1dip"
                    android:listSelector="#00000000" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>