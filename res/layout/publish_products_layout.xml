<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_for_common" />

    <View style="@style/style_horizontal_line" />

    <TextView
        android:id="@+id/tv_product_brand"
        style="@style/edittext_style_for_input"
        android:drawableRight="@drawable/arrow_down"
        android:hint="品牌（请选择）" />

    <View style="@style/style_horizontal_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_card_number"
            style="@style/edittext_style_for_input"
            android:layout_width="wrap_content"
            android:paddingRight="0dip"
            android:text="吊牌货号" />

        <EditText
            android:id="@+id/tv_product_brand"
            style="@style/edittext_style_for_input"
            android:background="@null"
            android:drawableLeft="@null"
            android:hint="（请输入）"
            android:paddingLeft="0dip" />
    </LinearLayout>

    <View style="@style/style_horizontal_line" />

    <TextView
        android:id="@+id/tv_classify"
        style="@style/edittext_style_for_input"
        android:drawableRight="@drawable/arrow_down"
        android:hint="分类（请选择）" />

    <View style="@style/style_horizontal_line" />

    <View
        style="@style/style_horizontal_line"
        android:layout_marginTop="15dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_card_price"
            style="@style/edittext_style_for_input"
            android:layout_width="wrap_content"
            android:paddingRight="0dip"
            android:text="吊牌价" />

        <EditText
            android:id="@+id/tv_product_brand"
            style="@style/edittext_style_for_input"
            android:background="@null"
            android:drawableLeft="@null"
            android:hint="（请输入）"
            android:paddingLeft="0dip" />
    </LinearLayout>

    <View style="@style/style_horizontal_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_sales_price"
            style="@style/edittext_style_for_input"
            android:layout_width="wrap_content"
            android:paddingRight="0dip"
            android:text="销售价" />

        <EditText
            android:id="@+id/tv_product_brand"
            style="@style/edittext_style_for_input"
            android:background="@null"
            android:drawableLeft="@null"
            android:hint="（请输入）"
            android:paddingLeft="0dip" />
    </LinearLayout>

    <View style="@style/style_horizontal_line" />

    <TextView
        android:id="@+id/tv_product_code"
        style="@style/edittext_style_for_input"
        android:drawableRight="@drawable/arrow_down"
        android:hint="商品编码（请选择）" />

    <View
        style="@style/style_horizontal_line"
        android:layout_marginTop="15dip" />

    <EditText
        android:id="@+id/et_introduce"
        style="@style/edittext_style_for_input"
        android:drawableLeft="@null"
        android:gravity="top"
        android:hint="写点推荐语吧..."
        android:minLines="3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_retain"
        android:paddingBottom="5dip"
        android:paddingRight="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:text="还可以输入13个字"
        android:textColor="@color/text_gray_color" />

    <View style="@style/style_horizontal_line" />

</LinearLayout>