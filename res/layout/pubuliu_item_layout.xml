<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/pubuliu_item_layout_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/default_pic" />

    <TextView
        android:id="@+id/pubuliu_item_layout_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/shop_main_width3_dimen"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/shop_main_width3_dimen"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/pubuliu_item_layout_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="ï¿¥" />

        <TextView
            android:id="@+id/pubuliu_item_layout_pricevalue_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pubuliu_item_layout_price_textview"
            android:maxLength="10"
            android:text="@null"
            android:textColor="@color/red" />

        <LinearLayout
            android:id="@+id/pubuliu_item_layout_like_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pubuliu_item_layout_like_imageview"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/collect_backgroud" />

            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/pubuliu_item_layout_like_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@null" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>