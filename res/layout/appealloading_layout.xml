<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/appealloading_layout_head"
        layout="@layout/title_for_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/appealloading_layout_footer_relativelayout"
        android:layout_below="@id/appealloading_layout_head" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 申诉时间 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_appealtime_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申诉时间:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_appealtimevalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/style_horizontal_line" />
            <!-- 申诉进度 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_appealprogress_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申诉进度:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_appealprogressvalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/style_horizontal_line" />
            
            <!-- 申诉理由 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_appealdesc_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申诉理由:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_appealdescvalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 买手账号 -->

            <RelativeLayout
                android:layout_marginTop="@dimen/shop_main_width15_dimen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_buyerno_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="买手账号:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_buyernovalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/appealloading_layout_buyericon_roundimageview"
                    android:layout_toRightOf="@id/appealloading_layout_buyerno_textview"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.shenma.yueba.view.RoundImageView
                    android:id="@+id/appealloading_layout_buyericon_roundimageview"
                    android:layout_width="@dimen/user_config_iconwidth40_dimen"
                    android:layout_height="@dimen/user_config_iconwidth40_dimen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_pic" />
            </RelativeLayout>

            <View style="@style/style_horizontal_line" />

            <!-- 买手电话 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_buyermobile_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="买手电话:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_buyermobilevalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/appealloading_layout_phoneicon_textview"
                    android:layout_toRightOf="@id/appealloading_layout_buyermobile_textview"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/appealloading_layout_phoneicon_textview"
                    android:layout_width="@dimen/shop_main_marginleft30_dimen"
                    android:layout_height="@dimen/shop_main_marginleft30_dimen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phon_icon" />
            </RelativeLayout>

            <View style="@style/style_horizontal_line" />

            <!-- 提货地址 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_goodsaddress_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货地址:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_goodsaddressvalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            
            
            <!-- 专员电话 -->

            <RelativeLayout
                android:layout_marginTop="@dimen/shop_main_width15_dimen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/shop_main_width15_dimen" >

                <TextView
                    android:id="@+id/appealloading_layout_commissionermobile_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="专员电话:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appealloading_layout_commissionermobilevalue_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/appealloading_layout_commissionerphoneicon_textview"
                    android:layout_toRightOf="@id/appealloading_layout_commissionermobile_textview"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/appealloading_layout_commissionerphoneicon_textview"
                    android:layout_width="@dimen/shop_main_marginleft30_dimen"
                    android:layout_height="@dimen/shop_main_marginleft30_dimen"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phon_icon" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/appealloading_layout_footer_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_config_iconwidth50_dimen"
        android:paddingLeft="@dimen/shop_main_width15_dimen"
        android:paddingRight="@dimen/shop_main_width15_dimen"
        android:paddingTop="@dimen/shop_main_width5_dimen"
        android:paddingBottom="@dimen/shop_main_width5_dimen"
        android:layout_alignParentBottom="true" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="@dimen/textsize13sp"
                android:id="@+id/appealloading_layout_lianxibuyer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/circle_default"
                android:text="联系买手"
                />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/appealloading_layout_cancelappeal_button"
                android:layout_width="@dimen/shop_main_iconwidth80_dimen"
                android:layout_height="wrap_content"
                android:text="撤销申诉" 
                android:textSize="@dimen/textsize13sp"
                android:background="@drawable/back_background"
                />

            <Button
                android:textSize="@dimen/textsize13sp"
                android:id="@+id/appealloading_layout_cancelpayprice_button"
                android:layout_marginLeft="@dimen/shop_main_width15_dimen"
                android:layout_width="@dimen/shop_main_iconwidth80_dimen"
                android:layout_height="wrap_content"
                android:background="@drawable/red_background"
                android:text="撤销退款" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>